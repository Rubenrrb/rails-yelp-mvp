<div class="container d-flex justify-content-center">
  <div class="card m-3 p-3" style="width: 18rem;">
    <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORY, include_blank: false %> 
    <%= f.submit 'Create Restaurant', class: 'btn btn-success btn-block'%>
    <% end %>
      <div class="m-3 text-center">
        <%= link_to restaurants_path do %>
        <i class="fas fa-undo" style="primary"></i> Back to list
        <% end %>
      </div>
    </div>
</div>
